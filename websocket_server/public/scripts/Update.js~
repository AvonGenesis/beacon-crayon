function update(){
	moveProjectile(mage, 123, 233);
}


function moveProjectile(sprite, x, y){
	

	if (!((sprite.x <= x+0.5) && (sprite.x >= x-0.5) &&
	    (sprite.y <= y+0.5) && (sprite.y >= y-0.5))) {
	
		sprite.x += Math.cos(Math.atan2(y-sprite.y, x - sprite.x));
		sprite.y += Math.sin(Math.atan2(y-sprite.y, x - sprite.x));
	}
	else{
		sprite.destroy();
		//TODO explosion animation 
	}


}
